<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="3px"
                android:color="#FFECB3" /> <!-- Lighter yellow border for pressed state -->
            <gradient
                android:angle="90"
                android:startColor="#FFE082"
            android:centerColor="#FFEB3B"
            android:endColor="#FFD600" />
            <corners
                android:radius="24dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <stroke android:width="3px" android:color="#BAAB15"/>
            <gradient android:angle="90"
                android:startColor="#FFC107"
                android:centerColor="#FFB300"
                android:endColor="#FFA000" />

            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>
